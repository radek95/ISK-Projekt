<html class="dark">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Dzień dobry!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <script src="https://cdn.tailwindcss.com"></script>
        <script>
    tailwind.config = {
     darkMode: 'class'
    }
  </script>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        
    </head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <body class="bg-gray-100 text-gray-800 m-10 dark:bg-gray-800 dark:text-white">
        <div class="w-full md:w-3/4 mx-auto mb-4 flex justify-between items-center">
            <div class="text-4xl">
                <a href={{ path('app_product') }}>ISK - Polecane produkty</a>  
                {% block bread %}
                    
                {% endblock %}          
            </div>
            <div class="text-right">
                <div class="text-sm text-gray-500 dark:text-gray-400 flex" >
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    {% if is_granted('ROLE_WORKER') %}
                    <div>
                        <a href="{{ path('app_product_add') }}">Dodaj nowy produkt</a>
                    </div>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                    <div class="ml-2">
                        <a href="{{ path('app_user') }}">Edytuj użytkowników</a>
                    </div>
                    {% endif %}
                    <div class="ml-2">
                        <a href={{ path('app_logout') }}>Wyloguj się</a>
                    </div>
                    <div class="ml-2">
                        <a href={{ path('app_cart') }}>Koszyk</a>
                    </div>
                    {% else %}
                    <div>
                        <a href={{ path('app_login') }}>Zaloguj się</a>
                    </div>
                    <div class="ml-2">
                        <a href="{{ path('app_register') }}">Zarejestruj się</a>
                    </div>
                    
                    {% endif %}
                    
                </div>
            </div>
        </div>
        
        <div class="w-full md:w-3/4 mx-auto">
        {% for message in app.flashes('success') %}
            <div class="rounded-md p-2 border-green-300 bg-green-50 border dark:border-green-600 dark:bg-green-700 dark:text-white mb-4">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('failure') %}
            <div class="rounded-md p-2 border-red-300 bg-red-50 border dark:border-red-600 dark:bg-red-700 dark:text-white mb-4">{{ message }}</div>
        {% endfor %}
        {% block body %}{% endblock %}
        </div> 
    </body>
</html>