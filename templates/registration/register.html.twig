{% extends 'base.html.twig' %}

{% block title %}Rejestracja{% endblock %}

{% block bread %} 
 > Rejestracja
{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="rounded-md p-2 border-red-300 bg-red-50 border dark:border-red-600 dark:bg-red-700 dark:text-white mb-4" role="alert">{{ flash_error }}</div>
    {% endfor %}
<div id="register-form-wrapper">
    {{ form_start(registrationForm, {'attr': {'class': 'ajax-form'}}) }}
    <div class="text-xl">
        Podstawowe informacje 
    </div>
    <div class="text-gray-500 mb-4 pb-4 border-b border-gray-300">
        podaj dane podstawowe
    </div>
    <div>
        {{ form_label(registrationForm.email, 'login (email)', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
        {{ form_errors(registrationForm.email) }}
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            {{ form_label(registrationForm.plainPassword.first, 'Hasło', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
            {{ form_errors(registrationForm.plainPassword.first) }}
        </div>
        <div>
            {{ form_label(registrationForm.plainPassword.second, 'Powtórz hasło', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
            {{ form_errors(registrationForm.plainPassword.second) }}
        </div>
    </div>
    <div class="flex items-center mt-4 mb-4">
        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 rounded border-gray border text-indigo-300 mr-2'}}) }}
        {{ form_label(registrationForm.agreeTerms, 'Zgoda na warunki umowy', {'label_attr': {'class': 'text-sm text-gray-700 dark:text-gray-300 font-medium'}})}}
    </div>
        <div class="border-b border-gray-300"></div>
        <div class="text-xl mt-4">
        Dane dodatkowe
    </div>
    <div class="text-gray-500 mb-4 pb-4 border-b border-gray-300">
         opcjonalne, możesz to zrobić później.  
    </div>

    {{ include('/settings_profile/_profile_form.html.twig', {form: registrationForm.userProfile}) }}

    <div>
        <button type="submit" class="block w-full shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">Rejestacja</button>
    </div>
    {{ form_end(registrationForm) }}
    </div>
    <div class="mt-2 text-center text-gray-600 dark:text-gray-400">
    Masz już konto? <a href="{{ path('app_login') }}">Zaloguj się</a>
</div>
    <script>
        $(function() {
            $('.ajax-form').submit(function(event) {
                event.preventDefault();

                var form = $(this);
                var url = form.attr('action');
                var method = form.attr('method');
                var data = form.serialize();

                $.ajax({
                    type: method,
                    url: url,
                    data: data,
                    success: function(response) {
                        console.log(response);

                        $('#register-form-wrapper').html(response);
                    },
                    error: function(response) {
                        console.log(response);

                        var errors = response.responseJSON.errors;
                        if (errors) {
                            $.each(errors, function(key, value) {
                                var input = form.find('[name="' + key + '"]');
                                var error = $('<span class="error">' + value + '</span>');
                                input.addClass('is-invalid').after(error);
                            });
                        }
                    }
                });
            });
        });
    </script>
{% endblock %}