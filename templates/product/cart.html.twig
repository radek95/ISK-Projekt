{% extends 'base.html.twig' %}

{% block title %}Summary{% endblock %}

{% block bread %}
    > Koszyk
{% endblock %}

{% block body %}
    <div class="mb-4">
        <div class="relative overflow-x-auto">
            <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Nazwa produktu 
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Ilość
                    </th>
                </tr>
                </thead>
                <tbody>
                {% set product = 0 %}
                {% for name, quantity in products %}
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                        
                        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                            {{ name }} - <a href="{{ path('app_delete_product', { id: product }) }}">X</a>
                        </th>
                        <td class="px-6 py-4">
                            <a href="{{ path('app_product_change_quantity', {id: product, quantity: -1}) }}"> - </a>{{ quantity }} <a href="{{ path('app_product_change_quantity', {id: product, quantity: 1}) }}"> + </a>
                        </td>
                    </tr>
                    {% set product = product + 1 %}
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="mt-2">
            <a href="#">Przejdź do podsumowania >></a>
        </div>
    </div>
    
{% endblock %}
